<tr id="notification<%= facebook_sign_up_notification.id %>" class="notification">
  <td><%= link_to(image_tag(facebook_sign_up_notification.sender.avatar.url(:icon), :class => "img-polaroid"), user_path(facebook_sign_up_notification.sender)) %></td>
  <td><%= t('facebook_sign_up_notifications._facebook_sign_up_notification.message_html', user: link_to(user_name_for(facebook_sign_up_notification.sender), user_path(facebook_sign_up_notification.sender))) %></td>
  <td>
    <div class="span1 pull-right">
      <div id="user-button<%= facebook_sign_up_notification.sender.id %>" class="mini-user-button">
        <%= mini_user_button_for(facebook_sign_up_notification.sender) %>
      </div>
    </div>
  </td>
</tr>
