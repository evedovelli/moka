<div class="span12">
  <h1><%= t '.title' %></h1>
  <div class="row">
    <% if can? :index, Option %>
      <div class="span4 offset1">
        <h2>
          <%= link_to(t('.manage_options'), options_path, :id => "manage_options",
                        :class => "btn btn-large btn-block btn-info text-center") %>
        </h2>
      </div>
    <% end %>

    <% if can? :index, Battle %>
      <div class="span4 offset2">
        <h2>
          <%= link_to(t('.manage_battles'), battles_path, :id => "manage_battles",
                        :class => "btn btn-large btn-block btn-info text-center") %>
        </h2>
      </div>
    <% end %>
  </div>
</div>
