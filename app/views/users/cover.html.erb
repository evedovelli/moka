<div class="container-cover-image container visible-phone">
  <div class="row">
    <div class="span12 center">
      <%= link_to image_tag("logo_medium.png", alt: t('layouts._navigation.page_title')) %>
    </div>
  </div>
</div>

<div id="cover-background">
  <div id="container-cover" class="container">
    <div id="main" role="main">
      <div class="row">

        <div class="span12">
          <div class="row">
            <div class="span6 offset1">
              <p class="title"><%= t '.title_html' %></p>
              <p class="introduction"><%= t '.introduction_html' %></p>
              <p class="explanation"><%= t '.explanation_html' %></p>
              <p class="explanation"><%= t '.share_html' %></p>
              <p class="free"><%= t '.free_html' %></p>
            </div>
            <div class="span5">
              <div class="login-buttons hidden-phone"></div>
              <div class="row">
                <div class="span3 offset1">
                  <%= link_to('/users/auth/facebook',
                              :id => 'facebook-sign-in',
                              :class => 'btn btn-primary btn-facebook btn-large btn-block btn-login') do %>
                    <table class="facebook-login-table">
                      <tr>
                        <td><%= fa_icon "facebook-square", class: "fa-3x" %></td>
                        <td></td>
                        <td><%= t('devise.shared._links.omniauth', provider: :Facebook) %></td>
                      </tr>
                    </table>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="span3 offset1">
                  <%= link_to(t('.sign_up'), new_user_registration_path, :class => 'btn btn-primary btn-large btn-block btn-login') %>
                </div>
              </div>
              <div class="row">
                <div class="span3 offset1">
                  <%= link_to(t('.login'), new_user_session_path, :class => 'btn btn-primary btn-large btn-block btn-login') %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="container-cover-image container hidden-phone">
  <div class="row">
    <div class="span12 center">
      <%= link_to image_tag("logo_medium.png", alt: t('layouts._navigation.page_title')) %>
    </div>
  </div>
</div>


<% content_for :head do %>
  <%# for Google %>
  <meta name="description" content="<%= t('og.description_long') %>"></meta>
  <meta name="keywords" content="<%= t('og.keywords') %>"></meta>
  <meta name="application-name" content="Batalharia"></meta>

  <%# for Facebook %>
  <meta property="og:title" content="<%= t('og.title') %>"></meta>
  <meta property="og:url" content="https://batalharia.com"></meta>
  <meta property="fb:app_id" content="<%= ENV['FACEBOOK_KEY'] %>"></meta>
  <meta property="og:type" content="website"></meta>
  <meta property="og:description" content="<%= t('og.description_long') %>"></meta>
  <meta property="og:image" content="<%= image_url("logo_banner.png") %>"></meta>
  <meta property="og:image:width" content="1200"></meta>
  <meta property="og:image:height" content="630"></meta>
  <meta property="og:site_name" content="Batalharia"></meta>
  <meta property="og:locale" content="<%= I18n.t('og.locale') %>"></meta>
  <meta property="og:locale:alternate" content="<%= I18n.t('og.locale_alternate1') %>"></meta>
  <meta property="og:rich_attachment" content="true"></meta>

  <%# for Twitter %>
  <meta name="twitter:card" content="summary"></meta>
  <meta name="twitter:site" content="@batalharia"></meta>
  <meta name="twitter:url" content="https://batalharia.com"></meta>
  <meta name="twitter:title" content="<%= t('og.title') %>"></meta>
  <meta name="twitter:description" content="<%= t('og.description_short') %>"></meta>
  <meta name="twitter:image" content="<%= image_url("logo_box.png") %>"></meta>
<% end %>
