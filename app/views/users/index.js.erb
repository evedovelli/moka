$("<%= escape_javascript(render @users) %>").appendTo("#users-index");

// Update pagination link
<% if @users.last_page? %>
  <% if @find_friends %>
    $('.user-pagination').html('<div class="row"><div class="span4 offset2 find-facebook-friends-container"><%= find_facebook_friends_button(t('buttons.update_facebook_friends')) %></div></div><div class="row"><p class="center user-last_page"><%= image_tag("watermark_small.png") %></p></div>');
  <% else %>
    $('.user-pagination').html('<p class="center user-last_page"><%= image_tag("watermark_small.png") %></p>');
  <% end %>
<% else %>
  $('.user-pagination').html("<%=j link_to_next_page(@users, t('users.index.next'), :remote => true, :class => "next_page") %>");
<% end %>

