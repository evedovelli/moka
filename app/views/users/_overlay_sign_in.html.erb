<div id="login-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="login-overlay-title" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      <i id="close-login-form" class="icon-remove"></i>
    </button>
    <h3 id="login-overlay-title" class="center"><%= t('users._overlay_sign_in.title') %></h3>
  </div>
  <div class="modal-body">

    <%= render :partial => 'devise/sessions/form',
               :locals => {
                 :resource => :user,
                 :resource_name => :user
               } %>

    <div class="form-horizontal">
      <div class="control-group">
        <div class="controls">
          <p><%= t('users._overlay_sign_in.not_a_member_html', :link => link_to(t('users._overlay_sign_in.sign_up'), new_registration_path(:user))) %></p>
          <p><%= link_to t('devise.shared._links.recover'), new_password_path(:user) %></p>
        </div>
      </div>
    </div>

  </div>
</div>

