<div class="span12">
  <h1><%= t '.title' %></h1>

  <% if can? :create, Battle %>
    <div id="battle_new">
      <div class="row">
        <div class="span12" id="battle_form" style="display:none;"></div>
      </div>

      <div class="row">
        <div class="span12">
          <div class="center">
            <%= link_to(new_battle_path, :id => "add_battle", :remote => true, :class => "btn btn-inverse center extra-space") do %>
              <i class="icon-plus icon-inverse"></i><%= " #{t '.add_battle'}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div id="battle_index">
    <%= render @battles %>
  </div>

  <div class="row">
    <div class="span12">
      <%= link_to(t('buttons.back'), :back, :onclick => "goBack()", :class => "btn extra-space") %>
    </div>
  </div>

</div>

