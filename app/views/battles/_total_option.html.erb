<div class="row">

  <div class="span12">
    <h2><%= t 'battles._total_option.title' %></h2>
  </div>

  <div class="span4 offset1">
    <% i = 0 %>
    <% @results_by_option.each do |result| %>
      <% i += 1 %>
      <div class="row">
        <div class="span4">
          <div class="partial_info pull-right">
            <h4><%= result[:label] %></h4>
            <h5><%= t('battles._total_option.info', :total => result[:value]) %></h5>
          </div>
          <div id="partial_picture<%= i %>" class="picture<%= result[:picture] %> picture"></div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="span7">
    <div id="canvas_options_box" class="center">
      <%= content_tag "div", id: "data_options", data: {options: @results_by_option} do %>
        <canvas id="canvas_options" height="350" width="350"></canvas>
      <% end %>
    </div>
  </div>


</div>
