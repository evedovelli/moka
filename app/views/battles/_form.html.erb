<%#<%= simple_nested_form_for(@battle, remote: true, :html => {:class => 'form-horizontal' }) do |f| +|%>
<%= simple_nested_form_for(@battle, remote: true) do |f| %>
  <div class="main-box">
    <h2 class="center"><%= t 'battles._form.title' %></h3>

    <%= f.error_notification %>

    <%= f.error(:options, :id => 'battle-options-error', :class => "text-error") %>
    <div class="row">
      <div class="span12 <%= @battle_options_error %>">
        <div id="options">
          <%= f.fields_for(:options) %>
        </div>
      </div>
      <div class="span3">
        <%= f.link_to_add(:options, :id => "add_new_option", :class => "btn btn-inverse btn-small", :data => {:target => "#options"}) do %>
          <i class="icon-plus icon-inverse"></i><%= " #{t 'battles._form.add_option'}" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <%= f.input(:starts_at, :as => :datetime_picker, :class => "datetimepicker") %>
      </div>
      <div class="span6">
        <%= f.input(:finishes_at, :as => :datetime_picker, :class => "datetimepicker") %>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <div class="center">
          <%= f.button(:submit, @battle.new_record? ? t('buttons.create') : t('buttons.update'), :class => "btn btn-primary") %>
          <%= link_to(t('buttons.cancel'), :back, :onclick => "$('#battle_form').slideUp(350)", :class => "btn") %>
        </div>
      </div>
    </div>
  </div>
<% end %>


