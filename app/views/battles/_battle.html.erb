<div class="battle_container">

  <% if battle.current? %>
    <div id="battle<%= battle[:id] %>" class="battle main-box battle-current">
  <% else %>
    <div id="battle<%= battle[:id] %>" class="battle main-box battle-finished">
  <% end %>
    <div class="row">
      <div class="span12">
        <div class="row">
          <div class="span12">
            <h4 class="pull-left">
              <%= link_to(battle.user.username, user_path(battle.user), :class => "battle_user") %>
            </h4>
            <% if can? :destroy, battle %>
              <h3 class="remove pull-right">
                <%= link_to(battle_path(battle),
                            :confirm => t('battles._battle.destroy'),
                            :method => :delete,
                            :remote => true,
                            :id => "delete_battle#{battle[:id]}",
                            :class => "delete_battle") do %>
                  <i class="icon-remove pull-right"></i>
                <% end %>
              </h3>
            <% end %>

            <% if can? :update, battle %>
              <h3 class="update pull-right">
                <%= link_to(edit_battle_path(battle),
                            :remote => true,
                            :id => "edit_battle#{battle[:id]}") do %>
                  <i class="icon-edit pull-right"></i>
                <% end %>
              </h3>
            <% end %>
          </div>
        </div>

        <h2 class="center battle_title"><%= battle.title %></h2>

        <div class="row">
          <div class="span6">
            <div class="row">
              <div class="span6">
                <h5 class="pull-left"><%= t 'activerecord.attributes.battle.starts_at' %></h5>
              </div>
            </div>
            <div class="row">
              <div class="span6">
                <h4 class="show-start-date date-left">
                  <%= battle.starts_at.strftime('%d/%m/%y - %H:%M') %>
                </h4>
              </div>
            </div>
          </div>
          <div class="span6">
            <div class="row">
              <div class="span6">
                <h5 class="pull-right"><%= t 'activerecord.attributes.battle.duration' %></h5>
              </div>
            </div>
            <div class="row">
              <div class="span6">
                <h4 class="show-end-date date-right">
                  <%= t 'datetime.distance_in_words.x_minutes', :count => battle.duration %>
                </h4>
              </div>
            </div>
          </div>
        </div>

        <%= simple_form_for(@vote, remote: true) do |f| %>
          <div class="battle-box">
            <div class="row">
              <% battle.options.each do |option| %>
                <%= render :partial => "options/option",
                           :locals => { :battle => battle,
                                        :option => option,
                                        :f => f
                                      } %>
              <% end %>
            </div>
          </div>
          <%= f.button(:submit, t('buttons.vote'), :class => "vote_button btn btn-primary btn-large") %>
        <% end %>

      </div>
    </div>
  </div>

</div>

