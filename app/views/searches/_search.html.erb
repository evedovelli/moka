<div id="search-form" class="search">
  <%= form_tag(search_path, method: 'get', id: 'form-search') do %>

    <div class="input-append">
      <%= text_field_tag(:search, @search || params[:search], class: 'span2', id: 'search-field', placeholder: t('layouts._search.field')) %>
      <%= button_tag(:class => "btn", :id => "search-hashtag-btn", :name => "commit", :value => "hashtag") do %>
        <i class="icon-hashtag"><b>#</b></i>
      <% end %>
      <%= button_tag(:class => "btn", :id => "search-user-btn", :name => "commit", :value => "user") do %>
        <i class="icon-user"></i>
      <% end %>
    </div>

  <% end %>
</div>
