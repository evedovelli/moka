<%= simple_form_for([@battle, @vote], :html => { :multipart => true, :class => "form-horizontal" }, remote: true) do |f| %>
  <div class="main-box">
    <div class="row">
      <% i = 0 %>
      <% @battle.options.each do |option| %>
        <% i += 1 %>
        <div class="<%= get_option_span_poll(@battle.options.count, i) %>">
          <h3 class="center"><%= option.name %></h3>
          <div class="vote_picture_frame">
            <label class="radio vote_picture">
              <%= f.radio_button(
                :option,
                option.id,
                :checked => false,
                :name => "vote[option_id]",
                :class => "vote_radio"
              )%>
              <div id="vote_picture_borther<%=option.id%>" class="picture<%=option.picture%> picture"></div>
            </label>
          </div>
          <p><%= t('votes._form.help_html',
                   :name => "#{option.name}",
                   :fone => "0800-123-00#{i}",
                   :sms => "800#{i}") %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="pull-right">
        <%= recaptcha_tags %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <div class="pull-right">
        <%= f.button(:submit, t('buttons.vote'), :id => "vote_button", :class => "btn btn-primary btn-large") %>
      </div>
    </div>
  </div>
<% end %>
