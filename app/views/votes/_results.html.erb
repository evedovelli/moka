<div id="<%="results#{option.id}"%>" class="results">
  <div class="row">
    <div class="span<%= size %>">
      <% if (can? :votes, option) && (votes > 0) %>
        <h4 class="center vote-count <%= votes_size(votes, total_votes) %>">
          <%= link_to(t('votes._results.votes', count: votes), option_votes_path(option.id), :remote => true, :id => "votes#{option.id}") %>
        </h4>
      <% else %>
        <h4 class="center vote-count <%= votes_size(votes, total_votes) %>">
          <%= t('votes._results.votes', count: votes) %>
        </h4>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="span<%= size %>">
      <% if can? :votes, option %>
        <%= render('votes/index', option: option) %>
      <% end %>
    </div>
  </div>

</div>
