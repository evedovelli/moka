<a id="language-dropdown" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">
  <%= t('layouts._pages.language') %>
</a>
<ul id="language-dropdown-menu" class="dropdown-menu" role="menu" aria-labelledby="language-dropdown">
  <li name="locale-pt-BR">
    <%= link_to(set_locale_path(:locale => "pt-BR"), :method => :get) do %>
      <%= t('languages.portuguese', locale: "pt-BR") %>
    <% end %>
  </li>
  <li name="locale-en">
    <%= link_to(set_locale_path(:locale => "en"), :method => :get) do %>
      <%= t('languages.english', locale: "en") %>
    <% end %>
  </li>
</ul>
