<div class="span5">
  <div class="main-frame">
    <h2><%= t('.title') %></h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group">
        <%= f.label :username, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :username, :autofocus => true, :class => "input-large" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit t('buttons.sign_up'), :class => "btn btn-primary btn-large btn-block" %>
        </div>
      </div>

    <% end %>

    <div class="form-horizontal">
      <div class="control-group">
        <div class="controls">
          <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= link_to('/users/auth/facebook',
                      :id => 'facebook-sign-in',
                      :class => 'btn btn-primary btn-facebook btn-large btn-block') do %>
            <table class="facebook-login-table">
              <tr>
                <td><%= fa_icon "facebook-square", class: "fa-1x" %></td>
                <td></td>
                <td><%= t('devise.shared._links.omniauth', provider: :Facebook) %></td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="span7">
  <div class="logo-sign-in">
    <%= link_to image_tag("logo_medium.png", alt: t('layouts._navigation.page_title')) %>
  </div>
</div>
