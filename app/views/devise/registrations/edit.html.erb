<%= render 'users/edit_nav' %>

<div class="span6 pull-left">
  <div class="main-frame">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <h3><%= t('.title') %></h3>

      <h5 class="divider"><span class="divider-text"><%= t('.section_identification') %></span></h5>

      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name, :autofocus => true, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :username, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :username, :autofocus => true, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true, :class => "input-large" %>
        </div>
      </div>

      <% if not from_omniauth?(current_user) %>
        <h5 class="divider"><span class="divider-text"><%= t('.section_password') %></span></h5>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="control-group">
          <%= f.label :password, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :autocomplete => "off", :class => "input-large" %>
            <span class="help-block"><%= t('.password_help') %></span>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, :class => "input-large" %>
          </div>
        </div>
      <% end %>

      <h5 class="divider"><span class="divider-text"><%= t('.section_language') %></span></h5>

      <div class="control-group">
        <%= f.label :language, :class => "control-label" %>
        <div class="controls">
          <%= f.select(:language, [
                                   ['PortuguÃªs (Brasil)', 'pt-BR'],
                                   ['English', 'en']
                                  ]) %>
        </div>
      </div>

      <h5 class="divider"></h5>

      <% if not from_omniauth?(current_user) %>
        <div class="control-group">
          <%= f.label :current_password, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :current_password, :class => "input-large" %>
            <span class="help-block"><%= t('.change_password_help') %></span>
          </div>
        </div>
      <% end %>

      <div class="control-group">
        <div class="controls">
          <%= f.submit(t('buttons.update'), :class => "btn btn-primary") %>
        </div>
      </div>
    <% end %>

    <h5 class="divider"><span class="divider-text"><%= t('.section_cancel') %></span></h5>

    <h3><%= t('.cancel_my_account') %></h3>

    <div class="form-horizontal">
      <div class="control-group">
        <label class="control-label"><%= t('.unhappy') %></label>
        <div class="controls">
          <%= button_to(t('buttons.cancel_my_account'), registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn", :id => "destroy-account") %>
        </div>
      </div>
    </div>

  </div>
</div>
