<div class="span12">
  <div class="main-frame">
    <h2><%= t('.title') %></h2>


    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.input :password, label: t('.new_password'), input_html: { :autofocus => true, :class => "input-large" } %>
      <%= f.input :password_confirmation, label: t('.confirm_password'), input_html: { :class => "input-large" } %>

      <div class="control-group">
        <div class="controls">
          <%= f.submit t('.change_password'), :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="form-horizontal">
      <div class="control-group">
        <div class="controls">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
