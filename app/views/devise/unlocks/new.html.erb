<h2><%= t('.title') %></h2>

<%= simple_form_for(resource,
                    :as => resource_name,
                    :url => unlock_path(resource_name),
                    :html => { :method => :post, :class => "form-horizontal" }
                   ) do |f| %>
  <%= f.input :email, input_html: { :autofocus => true, :class => "input-large" } %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit t('.unlock'), :class => "btn btn-primary btn-large btn-block" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
