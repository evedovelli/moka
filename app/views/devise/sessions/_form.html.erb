<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <div class="control-group">
    <%= f.label :login, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :login, :autofocus => true, :class => "input-large" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :class => "input-large" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit t('buttons.sign_in'), :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>
